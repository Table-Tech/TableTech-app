# 🏪 TableTech API - Environment Configuration Template
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Copy this file to .env and update the values for your environment
# For production, set these as environment variables in your deployment platform

# 🗄️ Database Configuration (REQUIRED)
DATABASE_URL="postgresql://username:password@localhost:5432/tabletech_db"

# 🚀 Server Configuration (REQUIRED)
PORT=3001
NODE_ENV=development
API_BASE_URL=http://localhost:3001

# 📦 Redis Configuration (REQUIRED)
REDIS_URL=redis://localhost:6379

# 🔐 JWT Authentication (REQUIRED)
# Generate secure secrets using: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_here_32_chars_minimum
JWT_REFRESH_SECRET=your_refresh_secret_here_32_chars_minimum
JWT_RESET_SECRET=your_reset_secret_here_32_chars_minimum
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# 🎯 Session Configuration (REQUIRED)
STAFF_SESSION_DURATION_HOURS=24
CUSTOMER_SESSION_DURATION_HOURS=2
SESSION_ACTIVITY_THRESHOLD_MINUTES=5
SESSION_CLEANUP_INTERVAL_MINUTES=60

# 💳 Mollie Payment Integration (REQUIRED)
MOLLIE_API_KEY=test_your_mollie_test_key_here
MOLLIE_WEBHOOK_SECRET=your_webhook_secret_from_mollie_dashboard

# 🌐 Frontend URLs (REQUIRED)
# Comma-separated list of allowed frontend URLs
FRONTEND_URL=http://localhost:3000,http://localhost:3002

# 📊 Logging (OPTIONAL)
LOG_LEVEL=info

# ⚙️ Node.js Configuration (OPTIONAL)
NODE_OPTIONS="--no-deprecation"

